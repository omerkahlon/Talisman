class Gold extends AdventureCard
{
    public int AddGold;
    public Player P;
    public Gold(Player P, int AddGold)
    {
        if (AddGold == 2)
        {
            this.CardName = "Two bags of gold";
            this.P.AddGold(AddGold);
        }
        if (AddGold == 1)
        {
            this.CardName = "Bag of Gold";
            this.P.AddGold(AddGold);
        }
    }
}
