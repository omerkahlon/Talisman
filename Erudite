package com.example.talisman.AdventureCards;

import com.example.talisman.AdventureCard;
import com.example.talisman.Dice;
import com.example.talisman.Player;
public class Erudite extends AdventureCard
{
    public Erudite()
    {
        super("Erudite");
    }
    public String EruditeInteraction(Player Pl) {
        if (Pl.GetSkillPoints() >= 4)
        {
            Dice d = new Dice(4);
            int rollResult = d.Roll();
            String message;
            switch (rollResult) {
                case 3:
                    Pl.SetCurrGold(Pl.Curr_Gold + 2);
                    message = "The Erudite gave you a gold!";
                    break;
                case 4:
                    Pl.SetStrengthPoints(Pl.GetStrengthPoints() + 1);
                    message = "The Erudite gave you 1 strength!";
                    break;
                case 5:
                    Pl.SetSkillPoints(Pl.GetSkillPoints() + 1);
                    message = "The Erudite gave you 1 skill!";
                    break;
                case 6:
                    Pl.SetLifePoints(Pl.GetLifePoints() + 1);
                    message = "The Erudite gave you 1 life!";
                    break;
                default:
                    message = "The Erudite seems confused..."; // Handle unexpected roll results
            }
            return message;
        }
        return "The Erudite ignores you. You need more skill!";
    }
}
