public class Imp extends AdventureCard
{
    public Imp()
    {
    }
    public String ImpEncounter(Player Pl)
    {
        Dice dice = new Dice();
        int rollResult = dice.Roll();
        if (rollResult == 1) {
            Pl.SetCurrTile(//Map1[x] = cli);
            return ("The Imp teleported you to the cliffs!");
        } else if (rollResult == 2) {
            Pl.SetCurrTile(//Map1[x] = Forest);
            return ("The Imp teleported you to the forest!");
        } else if (rollResult == 3) {
            Pl.SetCurrTile(//Map1[x] = Inn);
            return ("The Imp teleported you to the Inn!");
        } else if (rollResult == 4) {
            Pl.SetCurrTile(//Map1[x] = Ruins);
            return ("The Imp teleported you to the Ruins!");
        } else if (rollResult == 5) {
            Pl.SetCurrTile(//Map1[x] = Hidden Valley);
            return ("The Imp teleported you to the Hidden Valley!");
        } else if (rollResult == 6) 
        {
            Pl.SetCurrTile(//Map1[x] = cllifs);
            return ("The Imp teleported you to the Cursed Clearing!");
        }
    }
}
