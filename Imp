package com.example.talisman.AdventureCards;

import com.example.talisman.Dice;
import com.example.talisman.Player;
import com.example.talisman.AdventureCard;
public class Imp extends AdventureCard
{
    public Imp()
    {
        super("Imp");
    }
    public String UseCard(Player Pl) {
        Dice dice = new Dice(6); // Assuming a 6-sided dice
        int rollResult = dice.Roll();
        String message;
        switch (rollResult) {
            case 1:
                Pl.SetCurrTile(/* Map1[x] = Cliffs */);
                message = "The Imp teleported you to the Cliffs!";
                break;
            case 2:
                Pl.SetCurrTile(/* Map1[x] = Forest */);
                message = "The Imp teleported you to the Forest!";
                break;
            case 3:
                Pl.SetCurrTile(/* Map1[x] = Inn */);
                message = "The Imp teleported you to the Inn!";
                break;
            case 4:
                Pl.SetCurrTile(/* Map1[x] = Ruins */);
                message = "The Imp teleported you to the Ruins!";
                break;
            case 5:
                Pl.SetCurrTile(/* Map1[x] = Hidden Valley */);
                message = "The Imp teleported you to the Hidden Valley!";
                break;
            case 6:
                Pl.SetCurrTile(/* Map1[x] = Cursed Clearing */);
                message = "The Imp teleported you to the Cursed Clearing!";
                break;
            default:
                message = "The Imp's magic fizzled out..."; // Handle unexpected roll results
        }
        return message;
    }
}
