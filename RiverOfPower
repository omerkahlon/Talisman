package com.example.talisman.AdventureCards;

import com.example.talisman.AdventureCard;
import com.example.talisman.Player;
import com.example.talisman.Tile;
public class RiverOfPower extends AdventureCard
{
    private int PowerLeft;
    public Tile MyTile;
    public RiverOfPower(Player player)
    {
        super("River of Power");
        PowerLeft = 4;
        this.MyTile = player.GetCurrTile();
        player.SetStrengthPoints(player.GetStrengthPoints() + 1);
        this.PowerLeft -= 1;
    }
    public void UseCard(Player player)
    {
        if(this.PowerLeft == 0)
        {
            MyTile.RemoveAdventureCard(this);
        }
        else{
            player.SetStrengthPoints(player.GetStrengthPoints() + 1);
            this.PowerLeft -= 1;
        }
    }

}
