public class Unicorn extends AdventureCard
{
    private Player P;
    public Unicorn(Player P)
    {
        ArrayList<Escort> escorts = P.getEscorts();
        this.CardName = "Unicorn"
        if (escorts.contains("Unicorn")) {
            P.GetEscorts().add("Unicorn");
            P.SetStrengthPoints(P.GetStrengthPoints() + 1);
            P.SetSkillPoints(P.GetSkillPoints() + 1);
    }
    public void removeUnicorn() {
        ArrayList<Escort> Escorts = this.P.GetEscorts();
        if (escorts.contains("Unicorn"))
        {
            escorts.remove("Unicorn");
            P.SetStrengthPoints(P.GetStrengthPoints() - 1);
            P.SetSkillPoints(P.GetSkillPoints() - 1);
        }
    }
        public Player GetPlayer()
        {
            return this.P;
        }
}
